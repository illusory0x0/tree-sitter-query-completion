{
  "name": "tree-sitter-query-completion",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "illusory0x0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "url": "https://github.com/illusory0x0/tree-sitter-query-completion",
    "type": "git"
  },
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "tree-sitter-query",
        "extensions": [
          ".scm"
        ],
        "filenames": [
          "folds.scm",
          "highlights.scm",
          "indents.scm",
          "injections.scm",
          "locals.scm",
          "tags.scm",
          "textobjects.scm"
        ],
        "icon": {
          "dark": "./icon/tree-sitter.png",
          "light": "./icon/tree-sitter.png"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Tree Sitter Query configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vsce": "^2.15.0"
  }
}
